@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
<br />
<br />
<a asp-action="create" class="btn btn-primary">Create New Role </a>
<br />
<form asp-action="Index">
    <div class="row align-items-center justify-content-center mt-3 mb-3">
        <div class="col-8">
            <input type="text" class="form-control" name="searchValue"/>
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
    </div>
</form>
@if (Model.Count() > 0)
{
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(D => D.Id)</th>
                    <th>@Html.DisplayNameFor(D => D.Name)</th>
                    
                    
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody>
            @foreach (var role in Model)
            {
                    <tr>
                        <td>@Html.DisplayFor(M => role.Id)</td>
                        <td>@Html.DisplayFor(M => role.Name)</td>
                            
                        <partial name="_ButtonsPartialView" model="@role.Id" />

                    </tr>
            }
            </tbody>
        </table>
}
else
{
        <div class="mt-5 alert alert-danger">
            <h3>There Is No Roles</h3>
        </div>

}

