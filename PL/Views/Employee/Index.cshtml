@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />
<a  asp-action="Create" class="btn btn-primary">Create New Emplyee</a>
<br />
<form asp-action="Index">
    <div class="row align-items-center justify-content-center mt-3 mb-3">
        <div class="col-8">
            <input type="text" class="form-control" name="searchValue"/>
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
    </div>
</form>
@if (Model.Count() > 0)
{
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(D => D.Name)</th>
                    <th>@Html.DisplayNameFor(D => D.Age)</th>
                    <th>@Html.DisplayNameFor(D => D.Address)</th>
                    <th>@Html.DisplayNameFor(D => D.Department)</th>
                    <th>@Html.DisplayNameFor(D => D.ImageName)</th>
                    <th>@Html.DisplayNameFor(D => D.Salary)</th>
                    <th>@Html.DisplayNameFor(D => D.IsActive)</th>
                    <th>@Html.DisplayNameFor(D => D.Email)</th>
                    <th>@Html.DisplayNameFor(D => D.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(D => D.HireDate)</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody>
            @foreach (var employee in Model)
            {
                    <tr>
                            <td>@Html.DisplayFor(M => employee.Name)</td>
                            <td>@Html.DisplayFor(M => employee.Age)</td>
                            <td>@Html.DisplayFor(M => employee.Address)</td>
                            <td>@Html.DisplayFor(M => employee.Department.Name)</td>
                            <td>
                                <img src="~/files/images/@employee.ImageName" alt="Image Empl oyee" height="20" width="20" class="img-fluid">
                            </td>
                            <td>@Html.DisplayFor(M => employee.Salary)</td>
                            @*<td>@employee.IsActive</td>*@
                            <td>@Html.DisplayFor(M => employee.IsActive)</td>
                            <td>@Html.DisplayFor(M => employee.Email)</td>
                            <td>@Html.DisplayFor(M => employee.PhoneNumber)</td>
                            <td>@Html.DisplayFor(M => employee.HireDate)</td>
                            
                            <partial name="_ButtonsPartialView" model="@employee.Id.ToString()" />

                    </tr>
            }
            </tbody>
        </table>
}
else
{
        <div class="mt-5 alert alert-danger">
            <h3>There Is No Employees</h3>
        </div>

}

