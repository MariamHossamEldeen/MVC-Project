@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>
<form asp-action="Create">
    <div class="form-group">
        <label class="col-form-label"  asp-for="Code"></label>
        <input class="form-control"  asp-for="Code"/>
        <span asp-validation-for="Code"></span>
    </div>
     <div class="form-group">
        <label class="col-form-label"  asp-for="Name"></label>
        <input class="form-control"  asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
     <div class="form-group">
        <label class="col-form-label"  asp-for="DateOfCreation"></label>
        <input class="form-control"  asp-for="DateOfCreation"/>
        <span asp-validation-for="DateOfCreation"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Submit"/> |
    <a asp-action="Index" class="btn btn-primary">Back To List</a>
</form>


@section ValidationScriptSection
{
    <partial name="_ValidationScriptsPartial"/>    
}