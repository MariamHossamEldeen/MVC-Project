@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Update Department</h1>

<form asp-action="Edit">
    <div asp-validation-summary="All"></div>
    <input hidden asp-for="Id" />
    <div class="form-group">
        <label class="col-form-label"  asp-for="Code"></label>
        <input class="form-control"  asp-for="Code"/>
        <span asp-validation-for="Code"></span>
    </div>
     <div class="form-group">
        <label class="col-form-label"  asp-for="Name"></label>
        <input class="form-control"  asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
     <div class="form-group">
        <label class="col-form-label"  asp-for="DateOfCreation"></label>
        <input class="form-control"  asp-for="DateOfCreation"/>
        <span asp-validation-for="DateOfCreation"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Save"/> |
    <a asp-action="Index" class="btn btn-primary">Back To List</a>
</form>


@section ValidationScriptSection
{
     <partial name="_ValidationScriptsPartial"/>  
}